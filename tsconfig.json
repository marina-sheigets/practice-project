{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "src/**/*.test.ts", "config/jest/setupTests.ts"],
    "exclude": [
        "node_modules",
        "build",
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}